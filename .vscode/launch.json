{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "No Arguments",
            "type": "debugpy",
            "request": "launch",
            "module": "metaschema_codegen"
        },
        {
            "name": "Help message",
            "type": "debugpy",
            "request": "launch",
            "module": "metaschema_codegen",
            "args": [
                "--help"
            ]
        },
        {
            "name": "Local File",
            "type": "debugpy",
            "request": "launch",
            "module": "metaschema_codegen",
            "args": [
                "OSCAL/src/metaschema/oscal_complete_metaschema.xml",
                "-S",
                "/workspaces/metaschema-codegen/metaschema/schema/xml/metaschema.xsd"
            ]
        },
        {
            "name": "Remote URL (OSCAL)",
            "type": "debugpy",
            "request": "launch",
            "module": "metaschema_codegen",
            "args": [
                "https://raw.githubusercontent.com/usnistgov/OSCAL/main/src/metaschema/oscal_complete_metaschema.xml",
            ]
        },
    ]
}